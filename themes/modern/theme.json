{
  "name": "Modern Dark",
  "slug": "modern",
  "version": "1.0.0",
  "author": "SiteBuilder",
  "description": "Sleek dark theme with vibrant accents",
  "tags": ["dark", "modern", "bold"],
  "colors": {
    "primary": "#6366F1",
    "secondary": "#EC4899",
    "accent": "#F59E0B",
    "background": "#0F172A",
    "foreground": "#F8FAFC",
    "muted": "#1E293B",
    "border": "#334155"
  },
  "typography": {
    "fontFamily": {
      "heading": "'Poppins', system-ui, sans-serif",
      "body": "'Inter', system-ui, sans-serif"
    },
    "fontSize": {
      "base": "16px",
      "scale": 1.333
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.6,
      "relaxed": 1.8
    }
  },
  "spacing": {
    "unit": "0.25rem",
    "scale": [0, 1, 2, 3, 4, 6, 8, 12, 16, 24, 32, 48, 64]
  },
  "borderRadius": {
    "sm": "0.375rem",
    "md": "0.75rem",
    "lg": "1.5rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 2px 4px 0 rgb(0 0 0 / 0.3)",
    "md": "0 8px 16px -2px rgb(0 0 0 / 0.4)",
    "lg": "0 20px 25px -5px rgb(0 0 0 / 0.5)"
  },
  "customCSS": "body { background-image: linear-gradient(to bottom right, #0F172A, #1E293B); }"
}
